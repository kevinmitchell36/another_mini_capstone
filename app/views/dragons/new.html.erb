<h1>A New Dragon is born!</h1>
<%= form_tag "/dragons", method: :post do %>
<div class="form-group">
Category: <input type="text" class="form-control" name="category">
</div>
<div class="form-group">
Color: <input type="text" class="form-control" name="color">
</div>
<div class="form-group">
Size: <input type="text" class="form-control" name="size">
</div>
<div class="form-group">
Age: <input type="text" class="form-control" name="age">
</div>
<div class="form-group">
Alignment: <input type="text" class="form-control" name="alignment">
</div>
<div>
  <input type="submit" value="Hatch">
</div>
<% end %>